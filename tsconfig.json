{
  "compilerOptions": {
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "types": ["react"],
    "rootDir": "src",
    "outDir": "dist",
    "stripInternal": true,
    "removeComments": true,
    "declarationMap": true,
    "declaration": true,
    "skipLibCheck": true
    // "lib": ["dom", "esnext.asynciterable"]
    // "lib": ["esnext", "esnext.asynciterable"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
